#!/bin/bash

list_flags="-Si"
action_flags="-S"
placeholder="Remove package ..."
success_message="Installed 📦 $pkg"
failure_message="Failed to install 📦 $pkg"

while getopts ":r" Option; do
  case $Option in
    r)
      list_flags="-Qi"
      action_flags="-R"
      placeholder="Install package ..."
      success_message="Installed 📦 $pkg"
      failure_message="Failed to install 📦 $pkg"
      ;;
    *) ;;
  esac done

awk_str='
/^Name/{name=$2}
/^Description/{description=$2}
/^Download Size/{size=$2" →"}
/^Installed Size/{size_i=$2;
print name, "「 "size, size_i" 」", description}'

open_url_kbd="Control+o"

open_url() {
  pacman -Si "$1" | awk -F ' : ' '/^URL/{print $2}' | xargs xdg-open
}

entry=$(pacman "$list_flags" | awk -F ' : ' "$awk_str" | sort -d | \
  rofi -dmenu -i -theme-str "#entry { placeholder: \"$placeholder\"; }" \
  -kb-custom-1 "$open_url_kbd")

rofi_exit=$?

[ $rofi_exit -eq 1 ] && exit

pkg=$(echo "$entry" | awk '{print $1}')

case $rofi_exit in
  10) open_url "$pkg" ;;
  *) sudo pacman "$action_flags" --noconfirm "$pkg" &&
       say "$success_message" || say "$failure_message" ;;
esac

exit 0
