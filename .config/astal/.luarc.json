// https://github.com/LuaLS/lua-language-server/wiki/Configuration-File
{
  "diagnostics": {
    "disable": [
      "undefined-doc-name"
    ],
    "libraryFiles": "Opened",
    "globals": [
      "Astal",
      "GLib",
      "Gdk",
      "Gtk",
      "Variable",
      "Widget",
      "astal",
      "bind",
      "lookup_icon",
      "rem",
      "switch",
      "ternary"
    ]
  },
  "workspace": {
    "library": [
      "/usr/share/lua/5.4/"
    ],
    "maxPreload": 2000,
    "preloadFileSize": 1000
  },
  "runtime": {
    "version": "Lua 5.4"
  }
}
