(defpoll time :interval "5s"
  :initial `date +'{"count":"%j","time":"%R","day":"%a %d/%m"}'`
  `date +'{"count":"%j","hour":"%H","minute":"%M","day":"%a %d/%m"}'`)

(defwidget container_center []
  (centerbox :class "date"
    (overlay :width 120
      (box
        (transform
          :class "bg-left"
          :hexpand true
          :scale-x "215%"
          :translate-x "-27%"
          :scale-y "195%"
          :translate-y "-23%"
          {time.hour}))
      (label :visible {theme == "dark"} :class "fg-left" :text "Day ${time.count}"))
    (overlay :width 20
      (label :class "fg-center" :text "")
      (label :class "bg-center" :text ":"))
    (overlay :width 120
      (box
        (transform
          :class "bg-right"
          :hexpand true
          :scale-x "215%"
          :translate-x "-27%"
          :scale-y "195%"
          :translate-y "-23%"
          {time.minute}))
      (label :visible {theme == "dark"} :class "fg-right" :text "${time.day}"))))
