(deflisten player :initial ""
  "playerctl -F metadata -f '{{ artist }} - {{ title }}' || true")

(deflisten player_state :initial ""
  "playerctl -F metadata -f '{{ status }}' || true")


(defwidget container_center []
  (box
    :class "center_container"
    :halign "center"
    :orientation "h"
    ;; exmaple https://github.com/iamverysimp1e/dots/blob/main/configs/eww/modules/clock.yuck
    (overlay :class "date-box"
      (label :text "${time.time}   ${time.day}")
      ;; or maybe put here currently playing music title as a background idk
      (label :text "${time.count}"))))
