(defpoll time :interval "5s"
  :initial `date +'{"count":"%j","time":"%R","day":"%a %d/%m"}'`
  `date +'{"count":"%j","hour":"%H","minute":"%M","day":"%a %d/%m"}'`)

;; track cover script:
;; https://github.com/iamverysimp1e/dots/blob/main/configs/eww/modules/music.yuck
;; https://github.com/iamverysimp1e/dots/blob/main/configs/eww/scripts/music
(deflisten player :initial ""
  "playerctl -F metadata -f '{{ artist }} - {{ title }}' || true")

(deflisten player_state :initial ""
  "playerctl -F metadata -f '{{ status }}' || true")


(defwidget container_center []
  (centerbox :class "date"
    (overlay :width 120
      (label :class "fg-left" :text "Day ${time.count}")
      (label :halign "end" :class "bg-left" :text "${time.hour}"))
    (overlay :width 20
      (label :class "fg-center" :text "")
      (label :class "bg-center" :text ":"))
    (overlay :width 120
      (label :class "fg-right" :text "${time.day}")
      (label :halign "start" :class "bg-right" :text "${time.minute}"))))

