  (box :orientation "v" :spacing 0 :class "cpu"
    (box :valign "start" :class "label"
      (label :xalign 0 :yalign 0 :class "text" :text "cpu")
      (label :class "value" :xalign 1 :text "${EWW_TEMPS.ACPITZ_TEMP1}Â°"))
    (overlay
      (graph :class "load"
        :value {EWW_CPU.avg}
        :thickness 2
        :width 55
        :time-range "30s"
