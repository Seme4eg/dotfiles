#!/bin/bash

state=$1

say $state

if [ "$state" == "on" ]; then
  say "lid opened"
  hyprctl keyword monitor "eDP-1,highrr,0x0,1.7"
  count_monitors=$(hyprctl monitors | grep -c '^Monitor')
  # if its a normal lid on then do normal stuff, if there's a 2nd monitor
  # plugged its not needed
  if [ "$count_monitors" = 1 ]; then
    systemctl --user restart wlsunset
    change-theme
    sync_tz_and_loc
  fi
else
  # in order for this to work gotta have 'HandleLidSwitch=ignore' set in
  # /etc/systemd/logind.conf
  count_monitors=$(hyprctl monitors | grep -c '^Monitor')
  if [ "$count_monitors" = 1 ]; then
    systemctl suspend
  else
    hyprctl keyword monitor "eDP-1, disable"
    systemctl reload --user eww
    say "lid closed"
  fi
fi
